# Path: /operations/.env
# ===================================================================
# OPERATIONS STACK ENVIRONMENT
# ===================================================================

# --- Service Versions (Pinned) ---
FORGEJO_VERSION=12.0.3
POSTGRES_FORGEJO_VERSION=17.6
WOODPECKER_SERVER_VERSION=v2.4.0
WOODPECKER_AGENT_VERSION=v2.4.0

# --- Subdomains ---
FORGEJO_SUBDOMAIN="forgejo"
REGISTRY_SUBDOMAIN="registry-forgejo"
WOODPECKER_SUBDOMAIN="ci"

# --- Forgejo Database Credentials ---
POSTGRES_DB_FORGEJO="forgejo"
POSTGRES_USER_FORGEJO="forgejo"
POSTGRES_PASSWORD_FORGEJO="GenerateAStrongPasswordForForgejoDB"

# --- Forgejo OIDC Client Credentials (from Keycloak) ---
FORGEJO_OIDC_CLIENT_ID="forgejo"
FORGEJO_OIDC_CLIENT_SECRET="PasteTheForgejoClientSecretFromKeycloakHere"

# --- Woodpecker OAuth App Credentials (from Forgejo) ---
WOODPECKER_FORGEJO_CLIENT_ID="PasteTheWoodpeckerClientIDFromForgejoHere"
WOODPECKER_FORGEJO_CLIENT_SECRET="PasteTheWoodpeckerClientSecretFromForgejoHere"

# --- Woodpecker Configuration ---
WOODPECKER_ADMIN="YourForgejoAdminUsername"
WOODPECKER_AGENT_SECRET="GenerateAStrongSharedSecretForWoodpecker"
WOODPECKER_DOCKER_PRIVILEGED_IMAGES="plugins/docker,woodpeckerci/plugin-docker-buildx,kaniko"
