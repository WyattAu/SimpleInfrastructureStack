# Path: /operations/.env
# ===================================================================
# OPERATIONS STACK ENVIRONMENT
# ===================================================================

# --- Service Versions (Pinned) ---
FORGEJO_VERSION=12.0.3
POSTGRES_FORGEJO_VERSION=17.6
WOODPECKER_SERVER_VERSION=v3.9.0
WOODPECKER_AGENT_VERSION=v3.9.0

# --- Subdomains ---
FORGEJO_SUBDOMAIN="forgejo"
REGISTRY_SUBDOMAIN="registry-forgejo"
WOODPECKER_SUBDOMAIN="ci"

# --- Forgejo Database Credentials ---
POSTGRES_DB_FORGEJO="forgejo"
POSTGRES_USER_FORGEJO="forgejo"
POSTGRES_PASSWORD_FORGEJO="GENERATE_THIS"

POSTGRES_DB_WOODPECKER="woodpecker"
POSTGRES_USER_WOODPECKER="woodpecker"
POSTGRES_PASSWORD_WOODPECKER="GENERATE_THIS"

# --- Forgejo OIDC Client Credentials ---
FORGEJO_OIDC_CLIENT_ID="forgejo"
FORGEJO_OIDC_CLIENT_SECRET="GET_FROM_KEYCLOAK"

# --- Woodpecker OAuth App Credentials (from Forgejo) ---
WOODPECKER_FORGEJO_CLIENT="GET_FROM_FORGEJO"
WOODPECKER_FORGEJO_SECRET="GET_FROM_FORGEJO"

# --- Woodpecker Configuration ---
WOODPECKER_ADMIN="admin"
WOODPECKER_ORGS="YOUR_ORGANIZATION_NAME_IN_FORGEJO"
WOODPECKER_AGENT_SECRET="GENERATE_THIS"
WOODPECKER_DOCKER_PRIVILEGED_IMAGES="plugins/docker,woodpeckerci/plugin-docker-buildx,kaniko"
